<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.fragment.EkleFragment">


    <TextView
        android:id="@+id/yemekHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amarante"
        android:text="Yemek Ekle."
        android:textColor="@color/yaziRengi"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/kayit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/yemekHeading"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:src="@drawable/baseline_check_24"
        app:tint="@color/yaziRengi" />


    <EditText
        android:id="@+id/yemekAdEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/yemekHeading"
        android:layout_marginTop="16dp"
        android:background="@drawable/kenarlik"
        android:fontFamily="@font/abril_fatface"
        android:hint="Yemek İsmi"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/yemekicerikEditText"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/yemekAdEditText"
        android:layout_marginTop="8dp"
        android:background="@drawable/kenarlik"
        android:fontFamily="@font/amarante"
        android:gravity="top"
        android:hint="İçindekiler"
        android:maxLines="2"
        android:padding="12dp"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/yemekYapilisEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/yemekicerikEditText"
        android:background="@drawable/kenarlik"
        android:layout_marginTop="8dp"
        android:hint="Yapılış"
        android:textSize="18sp"
        android:gravity="top"
        android:padding="12dp"
        android:fontFamily="@font/amarante"/>

    

</RelativeLayout>